    <declare-styleable name="HoloCircleSeekBar">
        <attr name="wheel_size" format="integer" />
        <attr name="pointer_size" format="dimension" />
        <attr name="max" format="integer" />
        <attr name="show_text" format="boolean" />
        <attr name="start_angle" format="integer" />
        <attr name="end_angle" format="integer" />
        <attr name="text_size" format="dimension" />
        <attr name="init_position" format="integer" />
        <attr name="wheel_active_color" format="string" />
        <attr name="wheel_unactive_color" format="string" />
        <attr name="pointer_color" format="string" />
        <attr name="pointer_halo_color" format="string" />
        <attr name="text_color" format="string" />
    </declare-styleable>


    <declare-styleable name="JustifiedTextView">
        <attr name="text" format="string" localization="suggested" />
        <attr name="textColor" format="color|reference" />
        <attr name="backgroundColor" format="color|reference" />
        <attr name="textSize" format="integer" min="1" />
    </declare-styleable>


    <declare-styleable name="NightOwl_TabLayout">
        <attr name="night_textColorSelector" format="color|reference" />
        <attr name="night_tabIndicatorColor" format="color|reference" />
    </declare-styleable>
    <declare-styleable name="NightOwl_Toolbar">
        <attr name="night_titleTextColor" format="color|reference" />
        <attr name="night_popupTheme" format="color|reference" />
    </declare-styleable>
    <declare-styleable name="NightOwl_CollapsingToolbarLayout">
        <attr name="night_contentScrim" format="color|reference" />
    </declare-styleable>
    <declare-styleable name="NightOwl_CardView">
        <attr name="night_cardBackgroundColor" format="color" />
    </declare-styleable>



